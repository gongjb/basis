<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yft.zbase.widget.TitleBarView
            android:id="@+id/tlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/file_tips"
            android:layout_marginTop="@dimen/ui_12_dp"
            android:layout_marginStart="@dimen/ui_16_dp"
            android:layout_marginEnd="@dimen/ui_16_dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginTop="@dimen/ui_12_dp"
            android:background="@drawable/bg_home_top_left_right">
            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/rv_video"
                android:layout_marginTop="@dimen/ui_26_dp"
                android:layout_marginStart="@dimen/ui_16_dp"
                android:layout_marginEnd="@dimen/ui_16_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>
</layout>
