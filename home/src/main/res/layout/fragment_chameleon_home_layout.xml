<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>


        <import type="com.yft.zbase.R"></import>


        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_16_dp"
            android:layout_marginEnd="@dimen/ui_16_dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/v_top"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ui_12_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="隐私管家"
                    android:textColor="@color/login_backcolor"
                    android:textSize="@dimen/ui_22_dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/ui_36_dp"
                    android:layout_height="@dimen/ui_36_dp"
                    android:src="@mipmap/icon_search" />

            </LinearLayout>
        </LinearLayout>

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/rv_core"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_36_dp"
            android:paddingStart="@dimen/ui_20_dp"
            android:paddingEnd="@dimen/ui_20_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_title" />


        <LinearLayout
            android:id="@+id/ll_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_top_left_right"
            android:orientation="vertical"
            android:paddingStart="@dimen/ui_20_dp"
            android:paddingEnd="@dimen/ui_20_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_core">

            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/rv_apps"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/ui_16_dp"
                android:layout_height="0dp"
                android:layout_weight="1"
               />

            <ImageView
                android:id="@+id/iv_add_app"
                android:layout_width="@dimen/ui_50_dp"
                android:layout_height="@dimen/ui_50_dp"
                android:layout_marginTop="@dimen/ui_16_dp"
                android:layout_marginBottom="@dimen/ui_12_dp"
                android:src="@mipmap/ic_app_add_img"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
